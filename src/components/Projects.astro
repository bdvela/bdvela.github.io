---
import { getI18N } from '@/i18n';

const {currentLocale} = Astro
const i18n = getI18N({currentLocale})
import LinkButton from "./LinkButton.astro"
import { Icon } from 'astro-icon/components'

const TAGS = {
  JAVASCRIPT: {
    name: "Javascript",
    class: "bg-yellow-400 text-black",
    icon: 'language-javascript',
  },
  HTML: {
    name: "HTML",
    class: "bg-black text-white",
    icon: 'language-html5',
  },
  CSS: {
    name: "CSS",
    class: "bg-[#003159] text-white",
    icon: 'language-css3',
  },
  REACT:{
    name: "React",
    class: "bg-[#003159] text-white",
    icon: 'react',
  },
  ASTRO:{
    name: "Astro",
    class: "bg-black text-white",
    icon: 'astro',
  },
  JAVASPRINGBOOT: {
    name: "Spring Boot",
    class: "bg-black text-white",
    icon: 'language-java',
  },
  WORDPRESS: {
    name: "WordPress",
    class: "bg-[#003159] text-white",
    icon: 'wordpress',
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: 'tailwind',
  },
  FIGMA: {
    name: "Figma",
    class: "bg-white text-black",
    icon: 'figma',
  }
}
const PROJECTS = [
{
    title: `${i18n.PROJECTS.PROJECT_1.TITLE}`,
    description: `${i18n.PROJECTS.PROJECT_1.DESCRIPTION}`,
    link: "https://grupomofima.netlify.app/",
    image: "/grupo-mofima.webp",
    github:"",
    tags: [TAGS.ASTRO, TAGS.TAILWIND],
  },
  {
    title: `${i18n.PROJECTS.PROJECT_2.TITLE}`,
    description: `${i18n.PROJECTS.PROJECT_2.DESCRIPTION}`,
    link: "https://beizzon.com",
    image: "/beizzon.webp",
    github:"",

    tags: [TAGS.REACT, TAGS.JAVASPRINGBOOT, TAGS.TAILWIND],
  },
  {
    title: `${i18n.PROJECTS.PROJECT_3.TITLE}`,
    description: `${i18n.PROJECTS.PROJECT_3.DESCRIPTION}`,
    image: "/chiringuito.webp",
    github:"",
    tags: [TAGS.WORDPRESS, TAGS.FIGMA],
  },
  {
    title: `${i18n.PROJECTS.PROJECT_4.TITLE}`,
    description: `${i18n.PROJECTS.PROJECT_4.DESCRIPTION}`,
    image: "/retcamp_2022.webp",
    link: "https://bdvela.github.io/cvc-retcamp/",
    github:"https://github.com/bdvela/cvc-retcamp",
    tags: [TAGS.JAVASCRIPT, TAGS.HTML, TAGS.CSS],
  },
  {
    title: `${i18n.PROJECTS.PROJECT_5.TITLE}`,
    description: `${i18n.PROJECTS.PROJECT_5.DESCRIPTION}`,
    image: "/diswallet.webp",
    link: "https://diswallet-sx62.web.app/",
    github:"https://github.com/bdvela/DISWALLET",
    tags: [TAGS.WORDPRESS, TAGS.FIGMA],
  },
  {
    title: `${i18n.PROJECTS.PROJECT_6.TITLE}`,
    description: `${i18n.PROJECTS.PROJECT_6.DESCRIPTION}`,
    image: "/task_manager.webp",
    link: "https://agenda-3c731.web.app/",
    github:"https://github.com/bdvela/Task-Manager",
    tags: [TAGS.WORDPRESS, TAGS.FIGMA],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50 max-h-80">
      <img alt={title} class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                {tag.name === "Astro" && (
                  <Icon name=`astro` class="size-4"/>
                )}
                {tag.name === "Figma" && (
                  <Icon name=`figma` class="size-4"/>
                )}
                {tag.name !== "Astro" && tag.name !== "Figma" &&(
                  <Icon name=`mdi:${tag.icon}` class="size-4"/>
                )}
                {tag.name} 
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
               <Icon name="mdi:github" class="size-6"/>
            </LinkButton>
           

          )}
          {link && (
            <LinkButton href={link}>
              <Icon name="mdi:link" class="size-6"/>
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>